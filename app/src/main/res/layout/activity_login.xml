<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".login">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="15dp"
        android:text="Log in"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/login"
        ></TextView>


    <EditText
        android:textColorHint="#000000"
        android:layout_below="@+id/login"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:id="@+id/email"
        android:hint="Username"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:inputType="textEmailAddress"
        ></EditText>
    <EditText
        android:textColorHint="#000000"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:id="@+id/Password"
        android:hint="Password"
        android:textSize="25dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"

        ></EditText>
   <ProgressBar
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:id="@+id/progressBar"
       />

    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Forgot paasword"
        android:textSize="20dp"
        android:backgroundTint="#D71D22"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_marginLeft="220dp"
        android:id="@+id/Forgotpassbutton"
        android:layout_below="@+id/Password"

        ></Button>

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/creat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:textSize="25dp"
        android:backgroundTint="#183BE8"
        android:onClick="goToMain"
        android:id="@+id/submit"
        ></Button>

    <Button
        android:id="@+id/creat"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/Forgotpassbutton"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D61D22"
        android:text="creat account"
        android:textSize="20dp"
        android:onClick="creatAccount"

        ></Button>

</RelativeLayout>
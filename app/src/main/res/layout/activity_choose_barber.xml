<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".chooseBarber">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Barber"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        ></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordCity"
        android:layout_below="@+id/title"
        android:layout_marginTop="100dp"
        android:text="City barber in"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        ></TextView>
    <EditText
        android:textColorHint="#000000"
        android:layout_below="@+id/wordCity"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:id="@+id/CITY"
        android:hint="City"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        ></EditText>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordBname"
        android:layout_below="@+id/CITY"
        android:layout_marginTop="100dp"
        android:text="City barber in"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        ></TextView>
    <EditText
        android:textColorHint="#000000"
        android:layout_below="@+id/wordBname"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:id="@+id/Bname"
        android:hint="BarberShop Name"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        ></EditText>



    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Submit"
        android:id="@+id/Submet"
        android:layout_below="@+id/Bname"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:shadowColor="@color/black"
        ></Button>
</RelativeLayout>